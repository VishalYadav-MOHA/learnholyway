<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/llActionBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/addStory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/storyplusicon" />

        <ImageView
            android:id="@+id/story1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/addStory"
            android:src="@drawable/storyicons" />

        <ImageView

            android:id="@+id/story2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/story1"
            android:src="@drawable/storyicons" />

        <ImageView
            android:id="@+id/story3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/story2"
            android:src="@drawable/storyicons" />

        <ImageView
            android:id="@+id/story4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/story3"
            android:src="@drawable/storyicons" />

        <ImageView
            android:id="@+id/story5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/story4"

            android:src="@drawable/storyicons" />

    </LinearLayout>

    <ImageView

        android:id="@+id/proficontop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/ll1"
        android:paddingLeft="3dp"
        android:src="@drawable/ic_porficon4" />

    <ImageView
        android:id="@+id/imgPost"
        android:layout_width="363dp"
        android:layout_height="266dp"
        android:layout_below="@id/proficontop"
        android:layout_centerHorizontal="true"
        android:background="#99eeff" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/ic_imagepost"

        />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/proficontop"
        android:text="Munavvar Husain"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView1"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/proficontop"
        android:text="Hafiz/ Aleem, etc"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/Likes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/imgPost"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/ic_baseline_thumb_up_alt_24" />

    <TextView
        android:id="@+id/likesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Likes"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="100 Likes" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/likesCount"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="Description..."
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Description"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="#Hashtags" />

    <TextView
        android:id="@+id/Posttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hashtag"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="12 hours ago"
        android:textSize="10dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPost"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Download"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_file_download_24" />

        <ImageView
            android:id="@+id/Share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_share_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtWritePost"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/Posttime"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/styleforfeedpagebottom"
        android:drawableLeft="@drawable/ic_writing"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:text="Write Post" />

    />


</RelativeLayout>