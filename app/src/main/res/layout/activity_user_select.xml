<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#24A0FF"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtActionBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textviewforchevret"
            android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
            android:gravity="left|center"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ll"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/radio" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:text="Age"
        android:textColor="@color/black"
        android:textSize="22dp"

        />

    <RadioGroup
        android:id="@+id/rgrp1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="160dp"
        android:weightSum=".5"


        >

        <RadioButton
            android:id="@+id/Kids"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="6-16"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/Teens"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="17-22"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/Adults"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="23-above"
            android:textSize="17dp" />
    </RadioGroup>


    <RadioGroup
        android:id="@+id/rgrp2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="160dp"
        android:weightSum=".5"


        >

        <RadioButton
            android:id="@+id/Male"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="Male"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/Female"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="Female"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/Above"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="above"
            android:textSize="17dp" />
    </RadioGroup>


    <TextView
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="120dp"
        android:text="Gender"
        android:textColor="@color/black"
        android:textSize="22dp"

        />

    <TextView
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="330dp"
        android:text="Language"
        android:textColor="@color/black"
        android:textSize="22dp"

        />


    <RadioGroup
        android:id="@+id/rgrp3"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="370dp"
        android:weightSum=".5"


        >

        <RadioButton
            android:id="@+id/HindiUrdu"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="true"
            android:gravity="center_horizontal"
            android:text="Hindi/Urdu"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/English"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="English"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/Malyalam"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="Malyalam"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/Tamil"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="Tamil"
            android:textSize="17dp" />
    </RadioGroup>


    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="330dp"
        android:text="Profession"
        android:textColor="@color/black"
        android:textSize="22dp"

        />

    <RadioGroup
        android:id="@+id/rgrp4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="370dp"
        android:weightSum=".5">

        <RadioButton
            android:id="@+id/Student"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="true"
            android:gravity="center_horizontal"
            android:text="Student"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/Working"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="Working"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/HouseWife"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="House Wife"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/Retired"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:checked="false"
            android:gravity="center_horizontal"
            android:text="Retired"
            android:textSize="17dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="sans-serif"
        android:text="Continue"
        android:textColor="#FFF"
        android:textSize="22dp" />

</RelativeLayout>