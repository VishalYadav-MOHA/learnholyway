<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF">


    <LinearLayout
        android:id="@+id/llActionBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#24A0FF"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtActionBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/textviewforchevret"
            android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
            android:gravity="left|center"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llActionBar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styleforall"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_porficon4" />

        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/styleforall"
            android:gravity="center"
            android:padding="3dp"
            android:paddingRight="20dp"
            android:text="Profile Setting"
            android:textAlignment="center"
            android:textSize="14dp" />

    </LinearLayout>


    <!--    llLanguage-->
    <LinearLayout
        android:id="@+id/llLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styleforall"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLanguage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_quote" />

        <TextView
            android:id="@+id/txtLanguage"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/styleforall"
            android:gravity="center"
            android:padding="3dp"
            android:paddingRight="20dp"
            android:text="Language"
            android:textAlignment="center"
            android:textSize="14dp" />

    </LinearLayout>

    <!--    llNotifications-->


    <LinearLayout
        android:id="@+id/llNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llLanguage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styleforall"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgNotifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_circle_notifications_24" />

        <TextView
            android:id="@+id/txtNotifications"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/styleforall"
            android:gravity="center"
            android:padding="3dp"
            android:paddingRight="20dp"
            android:text="Notifications"
            android:textAlignment="center"
            android:textSize="14dp" />

    </LinearLayout>

    <!--    llPremium and Membership-->


    <LinearLayout
        android:id="@+id/llPremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llNotifications"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styleforall"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPremium"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_money_flat" />

        <TextView
            android:id="@+id/txtPremium"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/styleforall"
            android:gravity="center"
            android:padding="3dp"
            android:paddingRight="20dp"
            android:text="Premium &amp; Membership"
            android:textAlignment="center"
            android:textSize="14dp" />

    </LinearLayout>

    <!--    llHelp-->

    <LinearLayout
        android:id="@+id/llHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llPremium"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styleforall"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHelp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_help_24" />

        <TextView
            android:id="@+id/txtHelp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/styleforall"
            android:gravity="center"
            android:padding="3dp"
            android:paddingRight="20dp"
            android:text="Help"
            android:textAlignment="center"
            android:textSize="14dp" />

    </LinearLayout>

    <!--    llAbout-->


    <LinearLayout
        android:id="@+id/llAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llHelp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styleforall"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAbout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_info_24" />

        <TextView
            android:id="@+id/txtAbout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/styleforall"
            android:gravity="center"
            android:padding="3dp"
            android:paddingRight="20dp"
            android:text="About"
            android:textAlignment="center"
            android:textSize="14dp" />

    </LinearLayout>

    <!--    ll Dark mode-->


    <LinearLayout
        android:id="@+id/llDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styleforall"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDarkMode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_dark_mode_24" />

        <TextView
            android:id="@+id/txtDarkMode"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/styleforall"
            android:gravity="center"
            android:padding="3dp"
            android:paddingRight="20dp"
            android:text="Dark Mode"
            android:textAlignment="center"
            android:textSize="14dp" />

    </LinearLayout>

    <!--    ll Logout-->

    <LinearLayout
        android:id="@+id/llLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llDarkMode"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/styleforall"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_out_icon_22" />

        <TextView
            android:id="@+id/txtLogout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/styleforall"
            android:gravity="center"
            android:padding="3dp"
            android:paddingRight="20dp"
            android:text="Log out"
            android:textAlignment="center"
            android:textSize="14dp" />

    </LinearLayout>


</RelativeLayout>